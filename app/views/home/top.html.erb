<%= form_tag("/users/login", method: :post, class:"container") do %>
  <div class="form-group">
    <label for="email">Eメール</label>
    <input class="form-control form-control-lg" id="email" type="email" name="email" value="<%= @email %>">
  </div>
  <div class="form-group">
    <label for="password">パスワード</label>
    <input class="form-control form-control-lg" id="password" type="password" name="password" value="<%= @password %>">
  </div>
    <div class="row justify-content-end">
      <input type="submit" class="btn btn-primary" value="ログイン">
    </div>
<% end %>
