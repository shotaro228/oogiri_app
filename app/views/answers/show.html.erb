<div class="container">
  <div class="border p-3 mb-5">
    <div class="row">
      <%= image_tag '/test_icon.png', class: "rounded-circle col-1" %>
      <%= link_to(@user.name, "/users/#{@user.id}", class: "col-9 font-weight-bold") %>
      <p class="col-2"><%= @answer.created_at %></p>
    </div>
    <div class="row">
      <div class="col pt-4 lead">
      <%= link_to(@answer.content, "/answers/#{@answer.id}/edit") %>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class="col-2">
        <i class="fas fa-heart fa-2x fa-fw" style="color:red;"></i>
        <a href="/users">100</a>
      </div>
      <div class="col-2">
        <a href="/comments/new">
          <i class="fas fa-comments fa-2x fa-fw" style="color:lavender;"></i>
        </a>
        <a href="/users">100</a>
      </div>
    </div>
  </div>
</div>

<div class="comment-area">
  <% @count.times do |n| %> 
  <%= render "layouts/comment" %>
  <% end %>
</div>