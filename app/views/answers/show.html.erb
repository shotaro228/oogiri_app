<div class="container">
  <div class="border p-3 mb-5">
    <div class="row">
      <%= image_tag "/user_images/#{@user.image_name}", class: "image-fluid col-1" %>
      <%= link_to(@user.name, "/users/#{@user.id}", class: "col-9 font-weight-bold") %>
      <p class="col-2"><%= @answer.created_at %></p>
    </div>
    <div class="row">
      <div class="col pt-4 lead">
      <%= link_to(@answer.content, "/answers/#{@answer.id}/edit") %>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class="col-2">
        <% if Like.find_by(user_id: @current_user.id, answer_id: @answer.id) %>
          <%= link_to("/likes/#{@answer.id}/destroy", {method: "post"}) do %>
            <i class="fas fa-heart fa-2x fa-fw" style="color:red;"></i>
          <% end %>
        <% else %>
          <%= link_to("/likes/#{@answer.id}/create", {method: "post"}) do %>
            <i class="far fa-heart fa-2x fa-fw" style="color:red;"></i>
          <% end %>
        <% end %>
        <%= link_to(@likes_count, "/answers/#{@answer.id}/liked") %>
      </div>
      <div class="col-2">
        <%= link_to("/comments/#{@answer.id}/new") do %>
          <% if Comment.find_by(user_id: @current_user.id, answer_id: @answer.id) %>
            <i class="fas fa-comment fa-2x fa-fw" style="color:royalblue;"></i>
          <% else %>
            <i class="far fa-comment fa-2x fa-fw"></i>
          <% end %>
        <% end %>
        <%= link_to(@comments_count, "/answers/#{@answer.id}/commented") %>
      </div>
    </div>
  </div>
</div>

<% @comments.each do |comment| %>
<div class="container">
  <div class="border p-3 mb-5">
    <div class="row">
      <%= image_tag "/user_images/#{comment.user.image_name}", class: "image_fluid col-1" %>
      <%= link_to("#{comment.user.name}", "/users/#{comment.user.id}", class: "col-9 font-weight-bold") %>
      <p class="col-2"><%= comment.created_at %></p>
    </div>
    <div class="col pt-4">
      <%= link_to(comment.content, "/comments/#{comment.id}/edit") %>
    </div>
    <div class="row justify-content-end">
      <div class="col-2">
        <% if Commentlike.find_by(user_id: @current_user.id, comment_id: comment.id) %>
          <%= link_to("/commentlikes/#{comment.id}/destroy", {method: "post"}) do %>
            <i class="fas fa-heart fa-2x fa-fw" style="color:red;"></i>
          <% end %>
        <% else %>
          <%= link_to("/commentlikes/#{comment.id}/create", {method: "post"}) do %>
            <i class="far fa-heart fa-2x fa-fw" style="color:red;"></i>
          <% end %>
        <% end %>
        <%= link_to(comment.commentlikes.count, "/comments/#{comment.id}/liked") %>
      </div>
    </div>
  </div>
</div>
<% end %>