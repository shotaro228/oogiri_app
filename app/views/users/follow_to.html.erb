<% @followings.each do |following| %>
<div class="container">
  <div class="border p-3">
    <div class="row">
      <%= image_tag "/user_images/#{following.image_name}", class: "image-fluid col-1" %>
      <%= link_to(following.name, "/users/#{following.id}", class: "col-8 font-weight-bold") %>
      <% unless @current_user == following %>
        <% if @current_user.following?(following) %>
          <%= form_for(@current_user.follows.find_by(follow_id: following.id), html: { method: :delete }) do |f| %>
            <%= hidden_field_tag :follow_id, following.id %>
            <%= f.submit 'フォロー解除', class: 'btn btn-primary btn-block' %>
          <% end %>
        <% else %>
          <%= form_for(@current_user.follows.build) do |f| %>
            <%= hidden_field_tag :follow_id, following.id %>
            <%= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <p class="col pt-4"><%= following.introduction %></p>
    </div>
  </div>
</div>
<% end %>