<%= form_for @user, :html => {class: "container"} do |f| %>
  <div class="form-group">
    <%= f.label :user_name, "ユーザー名" %>
    <%= f.text_field :name, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Eメール" %>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control form-control-lg" %>
  </div>
  <div class="row justify-content-end">
    <%= f.submit "完了", class: "btn btn-primary" %>
    <input type="reset" class="btn btn-outline-secondary" value="キャンセル">
  </div>
<% end %>

