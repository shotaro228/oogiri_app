<% @commentlikes.each do |like| %>
<div class="container">
  <div class="border p-3">
    <div class="row">
      <%= image_tag "/user_images/#{like.user.image_name}", class: "image-fluid col-1" %>
      <%= link_to(like.user.name, "/users/#{like.user.id}", class: "col-8 font-weight-bold") %>
      <button type="button" class="btn btn-primary col-2">フォロー</button>
    </div>
    <div class="row">
      <p class="col pt-4"><%= like.user.introduction %></p>
    </div>
  </div>
</div>
<% end %>